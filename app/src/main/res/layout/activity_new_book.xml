<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.NewBookActivity"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#BCF1ED">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_marginTop="110dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="520dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#ccc"
            app:cardCornerRadius="26dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff">


                <EditText
                    android:id="@+id/title_editTxt"
                    android:layout_width="290dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/bg_text"
                    android:hint="Tajuk Nota"
                    android:paddingLeft="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:autoText="true"/>

                <EditText
                    android:id="@+id/details_editTxt"
                    android:layout_width="290dp"
                    android:layout_below="@id/title_editTxt"
                    android:layout_height="290dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="90dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/bg_text"
                    android:hint="Maklumat Nota"
                    android:paddingLeft="20dp"
                    android:textColor="#000"
                    android:autoText="true"/>



                <Button
                    android:id="@+id/add_btn"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="400dp"
                    android:text="Tambah Nota"
                    android:layout_marginRight="55dp"
                    android:layout_marginLeft="55dp"
                    android:background="@drawable/rounded_button"
                    android:textColor="#fff"
                    android:textSize="20sp" />


            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backbtn"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_arrow_back"
        app:backgroundTint="#000000"/>


</RelativeLayout>





