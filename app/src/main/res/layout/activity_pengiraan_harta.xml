<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.DashboardPengiraanHarta"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#BCF1ED">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frameHeader"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/logo_name"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:fontFamily="@font/bungee"
                android:gravity="center"
                android:text="Pengiraan"
                android:textSize="45sp"
                android:layout_marginTop="0dp"/>

        </FrameLayout>

        <!-- maklumat si mati-->
        <LinearLayout
            android:id="@+id/li1"
            android:layout_below="@+id/frameHeader"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_marginTop="-3dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#ccc"
                app:cardCornerRadius="26dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:padding="10dp"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"
                            android:text="1) Si Mati"
                            android:layout_marginTop="20dp"
                            android:textColor="#000"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:textStyle="bold"
                            android:text="(i) Nama Si Mati"
                            android:textColor="#000"/>

                        <EditText
                            android:id="@+id/namasimati"
                            android:layout_width="300dp"
                            android:textStyle="bold"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="30dp"
                            android:hint="Nama"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:textSize="18sp"
                            android:background="@drawable/bg_text"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:text="(ii) Jantina Si Mati"
                            android:textColor="#000"/>

                        <EditText
                            android:id="@+id/jantinasimati"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="30dp"
                            android:hint="Lelaki/Perempuan"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:textSize="18sp"
                            android:background="@drawable/bg_text"/>



                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- maklumat harta yang tinggalkan-->
        <LinearLayout
            android:id="@+id/li2"
            android:layout_below="@+id/li1"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginTop="-3dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#ccc"
                app:cardCornerRadius="26dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:padding="10dp"
                            android:layout_marginTop="20dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="15dp"
                            android:text="2) Maklumat Harta Yang ditinggalkan"
                            android:textColor="#000"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:text="(i) Jumlah harta yang ditinggalkan"
                            android:textColor="#000"/>

                        <EditText
                            android:id="@+id/totalharta"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="30dp"
                            android:hint="Jumlah harta yang ditinggalkan"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:textSize="18sp"
                            android:background="@drawable/bg_text"/>

                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- kos perbelanjaan jenazah-->
        <LinearLayout
            android:id="@+id/li3"
            android:layout_below="@+id/li2"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginTop="-3dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#ccc"
                app:cardCornerRadius="26dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="15dp"
                            android:text="3) Perbelanjaan Pengurusan Jenazah"
                            android:textColor="#000"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:text="(i) Kos pengurusan jenazah"
                            android:textColor="#000"/>

                        <EditText
                            android:id="@+id/pengurusanjenazah"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="30dp"
                            android:hint="Peralatan pengurusan jenazah"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:textSize="18sp"
                            android:background="@drawable/bg_text"/>


                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- hubungan-->
        <LinearLayout
            android:id="@+id/li4"
            android:layout_below="@+id/li3"
            android:layout_width="match_parent"
            android:layout_height="710dp"
            android:layout_marginTop="-3dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="680dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#ccc"
                app:cardCornerRadius="26dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:padding="10dp"
                            android:layout_marginTop="20dp"
                            android:textStyle="bold"
                            android:text="4) Bilangan Waris Utama"
                            android:layout_marginLeft="15dp"
                            android:textColor="#000"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:padding="10dp"
                            android:text="(i) Suami"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:textColor="#000"/>

                        <EditText
                            android:id="@+id/suami"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="30dp"
                            android:hint="0/1"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:textSize="18sp"
                            android:background="@drawable/bg_text"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:text="(ii) Isteri"
                            android:layout_marginLeft="20dp"
                            android:textColor="#000"/>

                        <EditText
                            android:id="@+id/isteri"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="30dp"
                            android:hint="0/1/2/3/4"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:textSize="18sp"
                            android:background="@drawable/bg_text"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:text="(iii) Bapa"
                            android:textColor="#000"/>

                        <EditText
                            android:id="@+id/bapa"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="30dp"
                            android:hint="0/1"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:textSize="18sp"
                            android:background="@drawable/bg_text"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:text="(iv) Ibu"
                            android:textColor="#000"/>

                        <EditText
                            android:id="@+id/ibu"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="30dp"
                            android:hint="0/1"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:textSize="18sp"
                            android:background="@drawable/bg_text"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:text="(v) Anak(P)"
                            android:textColor="#000"/>

                        <EditText
                            android:id="@+id/anakperempuan"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="30dp"
                            android:hint="0/1/2/3/4/5"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:textSize="18sp"
                            android:background="@drawable/bg_text"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:text="(vi) Anak(L)"
                            android:textColor="#000"/>

                        <EditText
                            android:id="@+id/anaklelaki"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="30dp"
                            android:hint="0/1/2/3/4/5"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="18sp"
                            android:background="@drawable/bg_text"/>

                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- jumlah-->
        <LinearLayout
            android:id="@+id/li5"
            android:layout_below="@+id/li4"
            android:layout_width="match_parent"
            android:layout_height="730dp"
            android:layout_marginTop="-3dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="720dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#ccc"
                app:cardCornerRadius="26dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- Tajuk jumlah -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/bungee"
                            android:gravity="center"
                            android:text="Jumlah"
                            android:textSize="45sp"
                            android:layout_marginTop="-10dp"
                            android:transitionName="logo_text"
                            app:layout_constraintHorizontal_bias="0"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="25dp">





                            <TextView
                                android:id="@+id/maklumatbakihartatext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text"
                                android:text="1) Baki Harta Keseluruhan:"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="#000"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="i. Baki Harta:"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="#000"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_below="@+id/maklumatbakihartatext" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/bakihartaText"
                                android:layout_below="@+id/maklumatbakihartatext"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:layout_marginTop="10dp"
                                android:textColor="#000"
                                android:layout_marginLeft="140dp"
                                android:layout_alignParentLeft="true"/>

                            <TextView
                                android:id="@+id/text1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_below="@+id/bakihartaText"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:layout_marginTop="10dp"
                                android:textColor="#000"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/maklumathartatext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text1"
                                android:layout_marginTop="5dp"
                                android:text="2) Jumlah Agihan Harta Kepada:"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="#000"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="i. Suami:"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:textSize="20sp"
                                android:textColor="#000"
                                android:layout_marginLeft="10dp"
                                android:layout_below="@+id/maklumathartatext" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/suamiText"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:layout_marginTop="10dp"
                                android:textColor="#000"
                                android:layout_below="@+id/maklumathartatext"
                                android:layout_marginLeft="100dp" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ii. Isteri:"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:layout_marginTop="10dp"
                                android:textColor="#000"
                                android:layout_marginLeft="10dp"
                                android:layout_below="@+id/suamiText" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/isteriText"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="#000"
                                android:layout_marginTop="10dp"
                                android:layout_below="@+id/suamiText"
                                android:layout_marginLeft="90dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="iii. Bapa:"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="#000"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_below="@+id/isteriText" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/bapaText"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:layout_marginTop="10dp"
                                android:textColor="#000"
                                android:layout_below="@+id/isteriText"
                                android:layout_marginLeft="100dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="iv. Ibu:"
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="#000"
                                android:layout_marginLeft="10dp"
                                android:layout_below="@+id/bapaText" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ibuText"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:textSize="20sp"
                                android:textColor="#000"
                                android:layout_below="@+id/bapaText"
                                android:layout_marginLeft="80dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="v. Anak(L):"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="#000"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_below="@+id/ibuText" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/anakLText"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:textSize="20sp"
                                android:textColor="#000"
                                android:layout_below="@+id/ibuText"
                                android:layout_marginLeft="120dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="vi. Anak(P):"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:layout_marginTop="10dp"
                                android:textColor="#000"
                                android:layout_marginLeft="10dp"
                                android:layout_below="@+id/anakLText" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/anakPText"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:layout_marginTop="10dp"
                                android:textColor="#000"
                                android:layout_below="@+id/anakLText"
                                android:layout_marginLeft="120dp" />



                        </RelativeLayout>

                        <Button
                            android:id="@+id/kirajumlah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_button"
                            android:text="Kira Jumlah"
                            android:textColor="#fff"
                            android:textSize="20sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp" />

                        <Button
                            android:id="@+id/resetjumlah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_button"
                            android:text="Reset Jumlah"
                            android:textColor="#fff"
                            android:textSize="20sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"/>

                        <Button
                            android:id="@+id/save"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_button"
                            android:text="Simpan Jumlah"
                            android:textColor="#fff"
                            android:textSize="20sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"/>





                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>